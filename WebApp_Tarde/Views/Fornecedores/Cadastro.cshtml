<div class="row">
    <div class="col-4"></div>
    <div class="col-4">
        <div class="card">
            <div class="card-header">
                <h2>Cadastrar Fornecedor</h2>
            </div>
            <div class="card-body" method="post">
                <form action="/fornecedores/cadastro">
                    <div class="form-group">
                        <label>Nome:</label>
                        <input name="nome" type="text" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label>Telefone</label>
                        <input name="telefone" type="tel" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label>Serviços</label>
                        <input name="servicos" type="text" class="form-control" />
                    </div>
                    <br />
                    <button class="btn btn-success" type="submit">Salvar Fornecedor</button>
                </form>
                <br />

            </div>
        </div>
    </div>
    <div class="col-4"></div>
</div>