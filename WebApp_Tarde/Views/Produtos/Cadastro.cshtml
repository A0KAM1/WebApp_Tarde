<div class="row">
    <div class="col-4"></div>
    <div class="col-4">
        <div class="card">
            <div class="card-header">
                <h2>Cadastrar Produto</h2>
            </div>
            <div class="card-body" method="post">
                <form action="/produtos/cadastro">
                    <div class="form-group">
                        <label>Descrição:</label>
                        <input name="descricao" type="text" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label>Quantidade:</label>
                        <input name="quantidade" type="number" class="form-control" />
                    </div>
                    <br />
                    <button class="btn btn-success" type="submit">Salvar Produto</button>
                </form>
            </div>
        </div>
    </div>
    <div class="col-4"></div>
</div>
