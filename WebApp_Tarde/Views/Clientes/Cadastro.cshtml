<div class="row">
    <div class="col-4"></div>
    <div class="card col-4">
        <div class="card-header">
            <div><h3>Cadastro de Cliente</h3></div>
        </div>
        <div class="card-body" method="post">
            <form action="/clientes/cadastro">
                <div class="form-group">
                    <label>Nome</label>
                    <input name="nome" type="text" class="form-control" />
                </div>
                <div class="form-group">
                    <label>Telefone</label>
                    <input name="telefone" type="tel" class="form-control" />
                </div>
                <br />
                <button class="btn btn-success" type="submit">Salvar Cliente</button>
            </form>
        </div>
    </div>
    <div class="col-4"></div>
</div>
