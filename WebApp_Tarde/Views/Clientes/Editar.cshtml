@model WebApp_Tarde.Models.ClientesViewModel

<div class="row">
    <div class="col-4"></div>
    <div class="card col-4">
        <div class="card-header">
            <div><h3>Editar Cliente</h3></div>
        </div>
        <div class="card-body">
            <form action="/clientes/SalvarDados" method="post">
                <label>Código</label>
                <input name="ID" type="text" readonly value="@Model.ID" />

                <div class="form-group">
                    <label>Nome</label>
                    <input name="Nome" type="text" class="form-control" value="@Model.Nome" />
                </div>
                <div class="form-group">
                    <label>Telefone</label>
                    <input name="Telefone" type="tel" class="form-control" value="@Model.Telefone"/>
                </div>
                <br />
                <button class="btn btn-success" type="submit">Salvar Cliente</button>
            </form>
        </div>
    </div>
    <div class="col-4"></div>
</div>
